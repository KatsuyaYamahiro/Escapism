        .carousel-caption
          h1
            | image4
          p
      .item
        = image_tag("introduction/slide3.jpg")
        .carousel-caption
          h1
            | image5
          p
      .item
        = image_tag("introduction/slide1.jpg")
        .carousel-caption
          h1
            | image7
          p
