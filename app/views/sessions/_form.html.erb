<%= stylesheet_link_tag "sessions", :media => "all" %>

<section id = "sessions" class = "fadeuout">
  <div class="container">
    <div class="page-header">
      <h1>Sign In</h1> 
    </div>
    <%= form_for :session, url: sessions_path, html: {class: 'form-horizontal'} do |f| %>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.text_field :username, class: "form-control", placeholder: "username" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.password_field :password, class: "form-control", placeholder: "password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit_tag "submit", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
