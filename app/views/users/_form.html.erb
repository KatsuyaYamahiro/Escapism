<div class="container">
  <div>
    <h3>ユーザー登録STEP</h3>
    <%= image_tag("sign_in/step3.png", :width=> "80%", :height => "auto") %>
  </div>

  <div class="page-header">
    <h1>Register</h1>
  </div>
  <%= form_for @user, html: {class: "form-horizontal"} do |f| %>

    <%= render :partial => 'shared/error_messages', :locals => { object: @user } %>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.text_field :username, class: "form-control", placeholder: "username" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.select :year, [*(1990..2100)], class: "form-control", include_blank: "year" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= session[:email] %>
        <%= f.hidden_field :email, :value => session[:email] %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.password_field :password, class: "form-control", placeholder: "password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
