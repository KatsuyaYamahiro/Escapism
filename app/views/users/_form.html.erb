<div class="container">
  <div class="page-header">
    <h1>Register</h1>
  </div>
  <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h3 class="red"><%= @user.errors.count %> 件のエラーが発生しました</h3>
        <ul>
          <% @user.errors.full_messages.each do |user_validation_error| %>
            <li class="red"><%= user_validation_error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.text_field :username, class: "form-control", placeholder: "username" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.select :year, [*(1990..2100)], class: "form-control", include_blank: "year" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.text_field :email, class: "form-control", placeholder: "email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.password_field :password, class: "form-control", placeholder: "password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
