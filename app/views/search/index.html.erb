<section id="searchpage" class="fadeout">
  <div class="container">
    <div class="page-header">
      <h1>Dürst研論文検索</h1>
    </div>

    <!-- 検索フォーム -->
    <%= form_tag search_path, method: :get, enforce_utf8: false, class: "form-horizontal" do %>
      <div class="form-group">
        <div class="col-sm-12">
          <%= search_field_tag :q, params[:q], class: 'form-control', placeholder: 'キーワード' %>
        </div>
      </div>
        <%= submit_tag '検索', class: "button btn-pos" %>
    <% end %>

    <!-- 検索結果の表示 -->
    <% if @thesisArray %>
      <%= page_entries_info @thesisArray %>
      <% @thesisArray.each do |t| %>
        <div class="page-header">
          <h4><%= link_to t[:thesis].title, thesis_path(t[:thesis]) %></h4>
        </div>
        <p class="text-muted search_summary">
          <small><%= t[:body] %></small>
        </p>
      <% end %>
      <%= paginate @thesisArray %>
    <% end %>
  </div>
</section>
