<h1>Dürst研論文検索</h1>

<!-- 検索フォーム -->
<%= form_tag search_path, method: :get, enforce_utf8: false do %>
  <div class="form-group">
    <%= search_field_tag :q, params[:q], class: 'form-control', placeholder: 'キーワード' %>
  </div>
  <button type="submit" class="btn btn-default">検索</button>
<% end %>

<br>

<!-- 検索結果の表示 -->
<% if @theses then %>
<div class="col-xs-9">
  <div id="results">
    <ul>
      <% @theses.hits.hits.each do |t| %>
        <hr />
        <div class="result">
          <h4><%= t._source.url %>（<%= t._source.author %>）</h4>
          <p class="text-muted">
            <small>執筆年度: <%= t._source.year %></small>
            <small>内容: <%= t._source.text %></small>
            <small>コメント: <%= t._source.comment %></small>
          </p>
        </div>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
