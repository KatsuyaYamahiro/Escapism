<div class="container">
  <% if @mail.errors.any? %>
    <div id="error_explanation">
      <h3 class="red"><%= @mail.errors.count %> 件のエラーが発生しました</h3>
      <ul>
        <% @mail.errors.full_messages.each do |address_validation_error| %>
          <li class="red"><%= address_validation_error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <h3>ユーザー登録STEP</h3>
    <%= image_tag("sign_in/step1.png", :width=> "80%", :height => "auto") %>
  </div>
  <h3 class="page-header">あなたの青学メールを送信ください。</h3>

  <%= form_tag('/mail_addresses', class: "form-horizontal") do %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= text_field :address, :name, :class => "form-control", :placeholder => "aoyama email address" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= submit_tag :submit, class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
