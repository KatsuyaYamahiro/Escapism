<div class="container">
  <div class="page-header">
  </div>
  <%= form_tag('/mail_addresses', class: "form-horizontal") do %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= text_field_tag :address, class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= submit_tag class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
