<div class="container">
  <div class="page-header">
  </div>
  <%= form_for @mail, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.text_field :address, class: "form-control", placeholder: "emailaddress" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
