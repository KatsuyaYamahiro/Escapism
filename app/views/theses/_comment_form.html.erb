<%= form_for [@thesis, @thesis.comments.build] do |f| %>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.text_area :body, class: "form-control", placeholder: "コメント" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
